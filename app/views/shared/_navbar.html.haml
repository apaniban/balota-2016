%nav.navbar
  .mainWrapper
    .logo
    .navbar-right
      - if user_signed_in?
        - if !current_user.registered_using_omniauth?
          = link_to 'My Account', edit_user_registration_path, class: 'btn navBtn pull-right'
        = link_to 'Logout', destroy_user_session_path, method: :delete, class:  'btn navBtn pull-right'
      - else
        = link_to 'Login', new_user_session_path, :class => 'btn navBtn pull-right'
